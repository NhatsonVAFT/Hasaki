<style>
    /* Form styling */
    .form-paper {
        background-color: #f8f8f8;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 4px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .control-label {
        font-weight: bold;
    }

    .text-danger {
        color: red;
    }

    /* Button styling */
    .btn {
        display: inline-block;
        padding: 6px 12px;
        margin-bottom: 0;
        font-size: 14px;
        font-weight: normal;
        line-height: 1.42857143;
        text-align: center;
        white-space: nowrap;
        vertical-align: middle;
        cursor: pointer;
        border: 1px solid transparent;
        border-radius: 4px;
    }

    .btn-default {
        color: #333;
        background-color: #fff;
        border-color: #ccc;
    }

        .btn-default:hover {
            color: #333;
            background-color: #e6e6e6;
            border-color: #adadad;
        }

    /* Link styling */
    a {
        color: #337ab7;
        text-decoration: none;
    }

        a:hover {
            color: #23527c;
            text-decoration: underline;
        }
    .btn-link {
        color: #337ab7;
        background-color: transparent;
        border: none;
        padding: 0;
        font-size: inherit;
        cursor: pointer;
        text-decoration: none;
    }

        .btn-link:hover {
            color: #23527c;
            text-decoration: underline;
        }
</style>

